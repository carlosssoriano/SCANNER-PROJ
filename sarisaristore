// A certain store sells soft drinks for P 2.25 and sandwiches for P 6.85. 
//Construct a program that will input the number of drinks, sandwiches a customer bought and payment then output the BILL and CHANGE.


import java.util.Scanner;

public class Main
{
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		double drinkprice = 2.25;
		double sandwichprice = 6.85;
		
		System.out.print("ENTER NUMBER OF SOFTDRINKS: ");
		int softdrinks = sc.nextInt();
		System.out.print("ENTER NUMBER OF SANDWICH: ");
		int sandwich = sc.nextInt();
	    System.out.print("ENTER CUSTOMER MONEY: ");
	    int money = sc.nextInt();
	    
	    
	    
	    int items = (softdrinks + sandwich);
	    double addprices = (softdrinks*drinkprice) + (sandwich*sandwichprice);
	    double change = (money - addprices);
	    
	    
	    System.out.println("\nTOTAL PURCHASE: " + items);
	    System.out.println("CUSTOMER MONEY: " + money + "php");
	    System.out.println("CUSTOMER TOTAL BILL: "+ addprices + "php");
	    System.out.println("CHANGE: " + change + "php");
	    
		
		  sc.close();

			}
}
